import java.util.scanner;

class EinsteinEquation {
	/**
	* Declarnig constants
	*/
	private static final double SPEED_LIGHT = 2.998 * (Math.pow(10, 8));

	/** 
	* Displaying result
	*/
	//String = String(); // should be 'new String()'
	public static void main(String[] args) {
		//create scanner
		final Scanner sc = new Scanner(System.in);
		// get user input
		System.out.print("Enter mass of the object: ");
		// read user input
		final String massString = sc.nextLine();
		try {
			//convert user input from string to double
			massDouble = Double.parseDouble(massString);
			// error check
			if (massDouble >= 0) {
				//calculate energy
				energy = massDouble * (Math.pow(SPEED_LIGHT, 2));
				// display result to console
				System.out.println(The amount of energy that would be released from a mass of " + mass + "kg is " + energy + " Joules");

			} else {
				// catch negative
				System.out.println("Invalid entry.");
		} catch (Illegal ArgumentException exception) {
			// catch error
			System.out.println("Invalid entry");
	}
		}
			}
